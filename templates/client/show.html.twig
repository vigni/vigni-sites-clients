{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<div class="index">
    <h1>Détails {{ client.nameCompany }} </h1>
    <div class="index-container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                <tr>
                    <th>Nom de l'entreprise</th>
                    <td>{{ client.nameCompany }}</td>
                </tr>
                <tr>
                    <th>Nom du contact</th>
                    <td>{{ client.contactName }}</td>
                </tr>
                <tr>
                    <th>Email du contact</th>
                    <td>{{ client.emailContact }}</td>
                </tr>
                <tr>
                    <th>Mobile</th>
                    <td>{{ client.mobile }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('client_index') }}"> <button>Retour à la liste</button></a>

        <a href="{{ path('client_edit', {'id': client.id}) }}"> <button>Modifier</button></a>

        {{ include('client/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
