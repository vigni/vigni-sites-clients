{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
<div class="index">
    <h1>Détails {{ site.name }}</h1>
    <div class="index-container">
        <table class="table">
        
        
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ site.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ site.name }}</td>
                </tr>
                <tr>
                    <th>Lien</th>
                    <td>{{ site.link }}</td>
                </tr>
                <tr>
                    <th>Version PHP</th>
                    <td>{{ site.versionPHP }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('site_index') }}"> <button>Retour à la liste</button> </a>

        <a href="{{ path('site_edit', {'id': site.id}) }}"><button>Modifier</button></a>

        {{ include('site/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
